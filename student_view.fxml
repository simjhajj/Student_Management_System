<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="649.0" prefWidth="641.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.student_management_system.StudentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <AnchorPane prefHeight="586.0" prefWidth="601.0" style="-fx-background-color: #FAEBD7;">
            <children>
                <TableView fx:id="studentTable" layoutX="21.0" layoutY="74.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="89.0" text="Id" />
                        <TableColumn fx:id="nameColumn" prefWidth="253.0" text="Name" />
                        <TableColumn fx:id="majorColumn" prefWidth="216.0" text="Major" />
                    </columns>
                </TableView>
                <Button layoutX="511.0" layoutY="545.0" mnemonicParsing="false" onAction="#deleteStudent" style="-fx-background-color: #da7171;" text="Delete" textAlignment="CENTER">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" layoutX="425.0" layoutY="545.0" mnemonicParsing="false" onAction="#addStudent" prefHeight="27.0" prefWidth="58.0" style="-fx-background-color: #33a0ff;" text="Add" textAlignment="CENTER">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <TextField fx:id="idField" layoutX="21.0" layoutY="489.0" prefHeight="26.0" prefWidth="89.0" promptText="Id" />
                <TextField fx:id="nameField" layoutX="130.0" layoutY="489.0" prefHeight="26.0" prefWidth="228.0" promptText="Name" />
                <TextField fx:id="majorField" layoutX="376.0" layoutY="489.0" prefHeight="26.0" prefWidth="205.0" promptText="Major" />
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="130.0" layoutY="29.0" text="Student Management System" textAlignment="CENTER">
                    <font>
                        <Font name="Times New Roman Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</VBox>
